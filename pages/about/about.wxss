/* pages/about/about.wxss */

.top {
  display: flex;
  align-items: center;
  justify-content: space-around;
  background-color: #25ae88;
  border-radius: 0px 0px 70px 0px / 0px 0px 20px 0px;
}

.left {
  display: flex;
  align-items: center;
  width: 70%;
}

.avatar {
  margin: 30rpx;
  width: 150rpx;
  margin-right: 50rpx;
  height: 150rpx;
  border: 8rpx solid #5dd4b3;
  border-radius: 50%;
  overflow: hidden;
}

button {
  display: inline-block;
  background: transparent;
  border: none;
  color: #fff;
  margin: 0;
  outline: none;
}

.nickname {
  color: #fff;
  margin-left: 80rpx;
}

van-icon {
  color: #fff;
  font-size: 20px;
}
