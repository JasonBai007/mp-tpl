/**index.wxss**/

.page-wrap {
  display: flex;
  flex-wrap: wrap;
  align-content: center;
  height: 100vh;
}

.item {
  display: block;
  background: #d4f7ed;
  width: 30%;
  height: 260rpx;
  margin: 10rpx;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #444;
}

.item text {
  font-size: 14px;
  display: block;
  margin-top: 20rpx;
}

.inner-icon {
  font-size: 26px;
}
